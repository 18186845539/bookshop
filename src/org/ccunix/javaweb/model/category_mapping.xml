<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.ccunix.javaweb.model">

	<class name="CategoryModel" table="category">
		<id name="id" column="id" type="int">
		    <generator class="increment"/>
		</id>
		<property name="cateName" column="cateName" type="string"></property>
		<property name="cateDesc" column="cateDesc" type="string"></property>

	</class>

</hibernate-mapping>
